<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.onion.base.board.qna.QnaDAO">
  	
  	<sql id="search">
  		<where>
  			<if test="kind == 'title'">
  				TITLE LIKE CONCAT('%', #{search}, '%')
  			</if>
  			<if test="kind == 'writer'">
  				WRITER LIKE CONCAT('%', #{search}, '%')
  			</if>
  			<if test="kind == 'contents'">
  				CONTENTS LIKE CONCAT('%', #{search}, '%')
  			</if>
  		</where>
  	</sql>
  	
  	<select id="getTotalCount" parameterType="Pager" resultType="Long">
  		SELECT COUNT(NUM) FROM NOTICE
  		<include refid="search"></include>
  	</select>
  	
  	<select id="getList" parameterType="Pager" resultType="QnaVO">
  		SELECT * FROM QNA
  		<include refid="search"></include>
  		ORDER BY NUM DESC
  		LIMIT #{startRow}, #{perPage}
  	</select>
  	
  	<insert id="setInsert" parameterType="BoardVO" useGeneratedKeys="true" keyProperty="num">
  		INSERT INTO QNA (NUM, WRITER, TITLE, CONTENTS, REGDATE, HIT, REF, STEP, DEPTH)
  		VALUES(#{num}, #{writer}, #{title}, #{contents}, now(), 0, #{num}, 0, 0)
  	</insert>
  	
  	<insert id="setFileInsert" parameterType="BoardFileVO">
  		INSERT INTO QNAFILES (NUM, FILENAME, ORINAME)
  		VALUES(#{num}, #{fileName}, #{oriName})
  	</insert>
  	
  	
 	<update id="setRefInsert" parameterType="BoardVO">
 		UPDATE QNA SET REF = #{num}
 		WHERE NUM = #{num}
 	</update>
  	
  	
  
  </mapper>